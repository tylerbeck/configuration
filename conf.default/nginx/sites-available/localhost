##
# Default Localhost Server
##
server {
	listen 80;
	server_name localhost;
	
	location / {
		root /Users/tylerbeck/Projects/localhost;
		index index.html;
	}
	
	## deny access to apache ".ht*" files
	location ~ /\.ht {
		deny  all;
	}

	## proxy php scripts	
	location ~ \.php$ {
		proxy_pass   http://localhost:8080;
	}

	## default error pages
	error_page   500 502 503 504  /50x.html;
	location = /50x.html {
		root   html;
	}
}

